#maps_stats
  h1 Maps statistics

  .col-md-6
    table.table
      tr
        th colspan="9" Map types
      tr
        th Map type
        th % played
        th Played
        th Wins
        th Losses
        th Draws
        th Win %
        th Loss %
        th Draw %
      tr
        td Assault maps
        td = @played[:assault]
